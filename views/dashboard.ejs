<% include headerAdmin.ejs %>

<div class="dashboardheader">
   	<h1>Table of Pages</h1>
</div>
	
<div class="btnaddpage">
	<a href="/admin/addpage"><input type="button" value="Add Page"></a>
</div>


<div class = "table">
	<table id = main>
	<tr>
		<th>title</th>
		<th>updated</th>
		<th>options</th>
	</tr>
	<% for(var i=0; i<Object.keys(page).length; i++) {%>

	<tr>
		<td><a href = "<%= page[i].url%>" ><%= page[i].title %></a></td>
		<td><%= page[i].date %></td>
		<td>
		<table id = tblmain>
     		<td id = tblmain><a href = "/admin/delete"><img src="/images/delete.png" alt="delete" width="20" height="20"></a></td>
     		<td id = tblmain><a href = "/admin/editpage"><img src="/images/edit.png" alt="edit" width="20" height="20"></td></a>
     		<td id = tblmain><a href = "/admin/visability"><img src="/images/visibility.png" alt="visibility" width="20" height="20"></td></a>
		</table>
		</td>
	</tr>
	<%}%>
	</table>
</div>

